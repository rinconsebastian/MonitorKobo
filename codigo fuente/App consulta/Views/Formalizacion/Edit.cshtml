                                    <div class="col-md-9">
                                        <input class="form-control-plaintext font-weight-light" value="@original.Municipio" readonly />
                                    </div>
                                </div>

                                <div class="form-group row border p-2" id="zonaDiv">
                                    <label asp-for="AreaPesca" class="col-md-3 col-form-label"></label>
                                    <div class="col-md-9">
                                        <input id="zonaInput" asp-for="AreaPesca" class="form-control" data-role="tagsinput" />
                                        <div class="mt-2 row form-row">
                                            <div class="col-md-5">
                                                <select id="zonaTipo" asp-items="@listaZonas" class="form-control">
                                                    <option value="">Tipo de zona</option>
                                                </select>
                                            </div>
                                            <div class="col-md-5">
                                                <input id="zonaNombre" type="text" class="form-control" placeholder="Nombre zona de pesca" />
                                            </div>
                                            <div class="col-md-2">
                                                <button id="zonaBoton" type="button" class="btn btn-warning ">Agregar</button>
                                            </div>
                                        </div>

                                        <span asp-validation-for="AreaPesca" class="form-text small text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group row border p-2">
                                    <label asp-for="ArtesPesca" class="col-md-3 col-form-label"></label>
                                    <div class="col-md-9">
                                        <input id="artesInput" asp-for="ArtesPesca" placeholder="Nombre arte de pesca" class="form-control" data-role="tagsinput" />
                                        <span asp-validation-for="ArtesPesca" class="form-text small text-danger"></span>
                                        <span class="block small text-secondary">[Presione Enter para confirmar el valor ingresado]</span>
                                    </div>
                                </div>

                                <div class="form-group row border p-2">
                                    <label asp-for="Especies" class="col-md-3 col-form-label"></label>
                                    <div class="col-md-9">
                                        <input id="especiesInput" asp-for="Especies" placeholder="Nombre especie" class="form-control" data-role="tagsinput" />
                                        <span asp-validation-for="Especies" class="form-text small text-danger"></span>
                                        <span class="block small text-secondary">[Presione Enter para confirmar el valor ingresado]</span>
                                    </div>
                                </div>
                                @if (permisoCancelar)
                                {
                                    <div class="form-group row">
                                        <label asp-for="Estado" class="col-md-3 col-form-label"></label>
                                        <div class="col-md-9">
                                            <select asp-for="Estado" asp-items="@listaEstados" class="form-control" required>
                                                <option value="">Seleccione una opción</option>
                                            </select>
                                            <span asp-validation-for="Estado" class="form-text small text-danger"></span>
                                        </div>
                                    </div>
                                }
                                @if (permisoAdmin)
                                {
                                    <hr />
                                    <div class="form-group row">
                                        <label asp-for="IdResponsable" class="col-md-3 col-form-label"></label>
                                        <div class="col-md-9">
                                            <select asp-for="IdResponsable" asp-items="@listaCoordinacion" class="form-control" required>
                                                <option value="">Seleccione una opción</option>
                                            </select>
                                            <span asp-validation-for="IdResponsable" class="form-text small text-danger"></span>
                                        </div>
                                    </div>
                                }
                                <hr />
                                <div class="form-group row">
                                    <div class="col-sm-4 offset-lg-4">
                                        <input type="submit" value="Guardar" class="btn btn-outline-primary btn-block" />
                                    </div>
                                </div>
                                <div class="m-2 p-2">
                                    <div class="alert alert-secondary" role="alert">
                                        <div class="custom-control custom-switch">
                                            <input type="checkbox" class="custom-control-input ck_field" data-tab="home-tab" id="v_form" value="1">
                                            <label for="v_form" class="custom-control-label">Confirma que esta información ha sido revisada. </label>
                                        </div>
                                    </div>
                                </div>
                            </form>

                        }
                        else
                        {
                            <div class="form-group row">
                                <label asp-for="Cedula" class="col-md-4 col-form-label"></label>
                                <div class="col-md-8">
                                    <input asp-for="Cedula" class="form-control-plaintext font-weight-light" readonly />

                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="Name" class="col-md-4 col-form-label"></label>
                                <div class="col-md-8">
                                    <input asp-for="Name" class="form-control-plaintext font-weight-light" readonly />
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="NombreAsociacion" class="col-md-4 col-form-label"></label>
                                <div class="col-md-8">
                                    <input asp-for="NombreAsociacion" class="form-control-plaintext font-weight-light" readonly />
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">Municipio</label>
                                <div class="col-md-8">
                                    <p class="form-control-plaintext font-weight-light">
                                        @original.Municipio -
                                        @original.Departamento
                                    </p>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="AreaPesca" class="col-md-4 col-form-label"></label>
                                <div class="col-md-8">
                                    <input asp-for="AreaPesca" class="form-control-plaintext font-weight-light" readonly />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="ArtesPesca" class="col-md-4 col-form-label"></label>
                                <div class="col-md-8">
                                    <input asp-for="ArtesPesca" class="form-control-plaintext font-weight-light" readonly />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Especies" class="col-md-4 col-form-label"></label>
                                <div class="col-md-8">
                                    <input asp-for="Especies" class="form-control-plaintext font-weight-light" readonly />
                                </div>
                            </div>

                        }
                    </div>
                </div>
            </div>

            <div class="tab-pane fade" id="tab-foto" role="tabpanel" aria-labelledby="tab-foto">
                <div class="text-center py-4 px-1">
                    @await Component.InvokeAsync("Image", new { file = original.ImgPescador, text = "Foto pescador", css = "img-detail-large", id = "img-pescador" })
                    @if (original.ImgPescador != null && original.ImgPescador != "")
                    {
                        <br />
                        <div class="m-2 p-2">
                            <div class="alert alert-secondary" role="alert">
                                <div class="custom-control custom-switch">
                                    <input type="checkbox" class="custom-control-input ck_field" data-tab="foto-tab" id="v_pescador" value="1">
                                    <label for="v_pescador" class="custom-control-label">Confirma que la imagen fue revisada.</label>
                                </div>
                            </div>
                        </div>
                        <button class="btn btn-outline-warning mt-3 showEditModal" data-img="img-pescador"
                                data-filename="@original.ImgPescador">
                            <i class="fas fa-photo-video"></i> Editar
                        </button>
                        if (permisoImagen)
                        {
                            <button class="btn btn-outline-success mt-3 ml-4 btn-image-load"
                                    data-filename="@original.ImgPescador"
                                    data-name="Foto pescador"
                                    data-image="img-pescador">
                                <i class="fas fa-upload"></i> Cargar
                            </button>
                        }
                        if (permisoRestablecer)
                        {
                            <button class="btn btn-outline-danger mt-3 ml-4 btn-image-reset"
                                    data-filename="@original.ImgPescador"
                                    data-name="Foto pescador"
                                    data-image="img-pescador">
                                <i class="far fa-window-restore"></i> Restablecer
                            </button>
                        }
                    }
                </div>
            </div>

            <div class="tab-pane fade" id="tab-solicitud" role="tabpanel" aria-labelledby="tab-solicitud">
                <div class="text-center py-4 px-1">
                    @await Component.InvokeAsync("Image", new { file = original.ImgSolicitudCarnet, text = "Foto solicitud", css = "img-detail-large", id = "img-solicitud" })
                    @if (original.ImgSolicitudCarnet != null && original.ImgSolicitudCarnet != "")
                    {
                        <br />
                        <div class="m-2 p-2">
                            <div class="alert alert-secondary" role="alert">
                                <div class="custom-control custom-switch">
                                    <input type="checkbox" class="custom-control-input ck_field" data-tab="solicitud-tab" id="v_solicitud" value="1">
                                    <label for="v_solicitud" class="custom-control-label">Confirma que la imagen fue revisada.</label>
                                </div>
                            </div>
                        </div>
                        <button class="btn btn-outline-warning mt-3 showEditModal" data-img="img-solicitud"
