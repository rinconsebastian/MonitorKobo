@model App_consulta.Models.FormalizacionPostModel

@{
    ViewData["Title"] = "Panel de control";
    ViewData["Subtitle"] = "Formalización";
    Layout = "~/Views/Shared/_Layout.cshtml";

    Formalization original = ViewBag.Formalizacion;

    var permisoEditar = User.HasClaim(c => (c.Type == "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/Formalizacion.Editar" && c.Value == "1"));
    var permisoAdmin = User.HasClaim(c => (c.Type == "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/Encuestador.Administrar" && c.Value == "1"));
    var permisoImprimir = User.HasClaim(c => (c.Type == "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/Formalizacion.Imprimir" && c.Value == "1"));

    var permisoCancelar = User.HasClaim(c => (c.Type == "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/Formalizacion.Cancelar" && c.Value == "1"));


    var permisoSolicitud = User.HasClaim(c => (c.Type == "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/Solicitud.Crear" && c.Value == "1"));

    var permisoImagen = User.HasClaim(c => (c.Type == "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/Formalizacion.Imagen.Cambiar" && c.Value == "1"));
    var permisoRestablecer = User.HasClaim(c => (c.Type == "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/Formalizacion.Imagen.Restablecer" && c.Value == "1"));


    var title = permisoEditar ? "Editar" : "Validar";

    var listaCoordinacion = (SelectList)ViewBag.Coordinaciones;
    var listaEstados = (SelectList)ViewBag.Estados;

    var listaZonas = (SelectList)ViewBag.Zonas;

}
@Html.Hidden("IdFormalizacion", Model.Id)
@Html.Hidden("IdKobo", original.IdKobo)
@Html.Hidden("PathStorage", @Url.Action("ViewImage", "Formalizacion"))
<div class="card w-75 mt-4 mx-auto d-print-none">
    <div class="card-body">
        <h4 class="my-2">
            @title formalización @original.NumeroRegistro
            @switch (Model.Estado)
            {
                case Formalization.ESTADO_BORRADOR:
                    <span class="badge bg-warning text-dark float-right">Borrador</span>
                    break;
                case Formalization.ESTADO_COMPLETO:
                    <span class="badge bg-success text-white float-right">Completo</span>
                    break;
                case Formalization.ESTADO_CANCELADO:
                    <span class="badge bg-danger text-white float-right">Cancelado</span>
                    break;
                case Formalization.ESTADO_IMPRESO:
                    <span class="badge bg-info text-white float-right">Impreso</span>
                    break;
                case Formalization.ESTADO_CARNET_VIGENTE:
                    <span class="badge bg-danger text-white float-right">Carnet vigente</span>
                    break;
                case Formalization.ESTADO_CARNET_DUPLICADO:
                    <span class="badge bg-danger text-white float-right">Duplicado</span>
                    break;
            }
        </h4>

        <div class="progress">
            <div id="ck_bar" data-basic="@(permisoEditar? 2 : 16)" class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: @(permisoEditar? 2 : 16)%" aria-valuenow="@(permisoEditar? 2 : 16)" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
        <hr />
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#tab-1" role="tab" aria-controls="tab1"
                   aria-selected="true" style="@(permisoEditar ? "" : "color: #387a40")">General</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="foto-tab" data-toggle="tab" href="#tab-foto" role="tab" aria-controls="tabfoto" aria-selected="false">Pescador</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="cedula-tab" data-toggle="tab" href="#tab-cedula" role="tab" aria-controls="tabcedula" aria-selected="false">Cédula</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="autorizacion-tab" data-toggle="tab" href="#tab-autorizacion" role="tab" aria-controls="tabautorizacion" aria-selected="false">Autorización</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="certificado-tab" data-toggle="tab" href="#tab-certificado" role="tab" aria-controls="tabcertificado" aria-selected="false">Certificación</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="solicitud-tab" data-toggle="tab" href="#tab-solicitud" role="tab" aria-controls="tabsolicitud" aria-selected="false"> Solicitud</a>
            </li>

            <li class="nav-item">
                <a class="nav-link" id="final-tab" data-toggle="tab" href="#tab-final" role="tab" aria-controls="tabfinal" aria-selected="false">Finalizar</a>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent">

            <div class="tab-pane fade show active" id="tab-1" role="tabpanel" aria-labelledby="tab-1">
