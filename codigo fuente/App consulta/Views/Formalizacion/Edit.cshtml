    <script type="text/javascript" src="~/lib/tagsinput/app.js"></script>


    <script type="text/javascript" src="~/lib/cropper/cropper.js"></script>
    <script type="text/javascript" src="~/js/tables/AlertScript.js"></script>
    <script type="text/javascript" src="~/js/tables/EditImageScript.js?v=1.1"></script>
    <script type="text/javascript" src="~/js/tables/ValidarFormalizacionScript.js?v=1.0"></script>
    <script>
        function goBack() {
            if ('referrer' in document) {
                window.location = document.referrer;
            } else {
                window.history.back();
            }
        }
    </script>
    <script>
        var especies = JSON.parse('@Html.Raw(ViewBag.Especies)');
        var artes = JSON.parse('@Html.Raw(ViewBag.Artes)');

        //Inicia el campo taginput para artes de pesca
        var dataArtes = new Bloodhound({
            datumTokenizer: Bloodhound.tokenizers.obj.whitespace('value'),
            queryTokenizer: Bloodhound.tokenizers.whitespace,
            local: $.map(artes, function (item) {
                return {
                    value: item
                };
            })
        });
        dataArtes.initialize();

        $('#artesInput').tagsinput({
            typeaheadjs: {
                displayKey: 'value',
                valueKey: 'value',
                source: dataArtes.ttAdapter()
            }
        });

        //Inicia el campo taginput para especies
        var dataEspecies = new Bloodhound({
            datumTokenizer: Bloodhound.tokenizers.obj.whitespace('value'),
            queryTokenizer: Bloodhound.tokenizers.whitespace,
            local: $.map(especies, function (item) {
                return {
                    value: item
                };
            })
        });
        dataEspecies.initialize();

        $('#especiesInput').tagsinput({
            typeaheadjs: {
                displayKey: 'value',
                valueKey: 'value',
                source: dataEspecies.ttAdapter()
            }
        });

        $(function () {


            //Define el campo zona de pesca
            $('#zonaInput').tagsinput();
            $('#zonaDiv .bootstrap-tagsinput input').attr('style', 'display:none!important');

            $('body').on('click', '#zonaBoton', function (e) {
                var tipo = $('#zonaTipo').val();
                var nombre = $('#zonaNombre').val();
                if (tipo == "") {
                    funcGenerico.mostrarMensaje("Seleccione un tipo de zona.", "warning");
                } else if (nombre == "") {
                    funcGenerico.mostrarMensaje("Complete el nombre de la zona.", "warning");
                } else {
                    $('#zonaInput').tagsinput('add', " "+tipo + " '" + nombre + "'");
                    $('#zonaTipo').val("");
                    $('#zonaNombre').val("");
                }
            });
        });

    </script>
}
